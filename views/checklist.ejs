    </div>






    <main>
        <form  id="formChecklist" action="/ir_menu_cidadao" method="POST">
            <input type="text" name="nome" id="nome" value="<%=nome%>">
            <input type="text" name="cpf" id="cpf" value="<%=cpf%>">
            <input type="text" name="latitude" id="latitude" value=""><!--{{$latitude}}-->
            <input type="text" name="longitude" id="longitude" value=""><!--{{$longitude}}-->
            <input type="text" name="data" id="data" value="<%=data%> <%=hora%>">
            <!--Values que serão retornados de volta para o menu-->
            <input type="text" name="nome_cidadao"  value="<%=nome%>">
            <input type="text" name="cpf_cidadao" value="<%=cpf%>">
              
            <button type="button" class="formBtn" id="btn_finalizar">FINALIZAR</button>
        </form>





        
        
       

        
    </main>

    <footer>
        <div>
            <img src="/img/logo-prefeitura.png" alt="Logomarca prefeitura">
            <p>Xô Aedes</p>
        </div>
    </footer>


    <script src="/js/checklist.js"></script>
